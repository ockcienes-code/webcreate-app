<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KullanÄ±cÄ± YÃ¶netimi - WebCreate</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/animations.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <!-- Header -->
    <% if (user) { %>
        <% if (user.role === 'admin') { %>
            <%- include('../partials/admin-header') %>
        <% } else { %>
            <%- include('../partials/user-header') %>
        <% } %>
    <% } else { %>
        <%- include('../partials/header') %>
    <% } %>

    <main class="container" style="min-height: 80vh; padding: 2rem 0;">
        <div class="animate-fade-in">
            <!-- BaÅŸlÄ±k ve Arama -->
            <div style="display: flex; justify-content: between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
                <div>
                    <h1 style="color: var(--white); margin-bottom: 0.5rem;">KullanÄ±cÄ± YÃ¶netimi</h1>
                    <p style="color: #ccc;">Sistemde kayÄ±tlÄ± tÃ¼m kullanÄ±cÄ±lar</p>
                </div>
                
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <div style="position: relative;">
                        <input 
                            type="text" 
                            id="userSearch" 
                            placeholder="KullanÄ±cÄ± ara..."
                            class="form-control" 
                            style="padding-left: 2.5rem; width: 300px;"
                        >
                        <span style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: #ccc;">ğŸ”</span>
                    </div>
                    
                    <select id="userFilter" class="form-control" style="width: 200px;">
                        <option value="all">TÃ¼m KullanÄ±cÄ±lar</option>
                        <option value="recent">Son 7 GÃ¼n</option>
                        <option value="active">Aktif KullanÄ±cÄ±lar</option>
                        <option value="inactive">Pasif KullanÄ±cÄ±lar</option>
                    </select>
                </div>
            </div>

            <!-- Toplu Ä°ÅŸlemler -->
            <div id="userBulkActions" class="card" style="display: none; margin-bottom: 1.5rem; background: var(--medium-gray);">
                <div style="display: flex; justify-content: between; align-items: center;">
                    <div>
                        <strong style="color: var(--white);">
                            <span id="selectedUsersCount">0</span> kullanÄ±cÄ± seÃ§ildi
                        </strong>
                    </div>
                    <div style="display: flex; gap: 1rem;">
                        <button onclick="exportSelectedUsers()" class="btn btn-outline" style="padding: 0.5rem 1rem;">
                            ğŸ“Š SeÃ§ilenleri DÄ±ÅŸa Aktar
                        </button>
                        <button onclick="deleteSelectedUsers()" class="btn btn-danger" style="padding: 0.5rem 1rem;">
                            ğŸ—‘ï¸ SeÃ§ilenleri Sil
                        </button>
                    </div>
                </div>
            </div>

            <!-- KullanÄ±cÄ± Tablosu -->
            <div class="card">
                <div class="table">
                    <table style="width: 100%;" id="usersTable">
                        <thead>
                            <tr>
                                <th style="width: 30px;">
                                    <input type="checkbox" id="selectAllUsers" class="user-checkbox">
                                </th>
                                <th>KullanÄ±cÄ± Bilgisi</th>
                                <th>Ä°letiÅŸim</th>
                                <th>Åirket</th>
                                <th>KayÄ±t Tarihi</th>
                                <th>Son Aktivite</th>
                                <th>Durum</th>
                                <th>Ä°ÅŸlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users.length > 0) { %>
                                <% users.forEach(user => { %>
                                <tr>
                                    <td>
                                        <input type="checkbox" class="user-checkbox" value="<%= user._id %>">
                                    </td>
                                    <td>
                                        <div>
                                            <div style="color: var(--white); font-weight: 500;"><%= user.name %></div>
                                            <div style="color: #ccc; font-size: 0.875rem;">ID: <%= user._id.toString().substring(0, 8) %>...</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div style="color: var(--white);">ğŸ“§ <%= user.email %></div>
                                            <% if (user.phone) { %>
                                            <div style="color: #ccc; font-size: 0.875rem;">ğŸ“ <%= user.phone %></div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (user.company) { %>
                                            <span style="color: var(--white);"><%= user.company %></span>
                                        <% } else { %>
                                            <span style="color: #ccc;">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span style="color: #ccc;">
                                            <%= new Date(user.createdAt).toLocaleDateString('tr-TR') %>
                                        </span>
                                    </td>
                                    <td>
                                        <span style="color: #ccc;">
                                            <%= new Date(user.updatedAt).toLocaleDateString('tr-TR') %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge status-active">
                                            ğŸŸ¢ Aktif
                                        </span>
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                            <button onclick="viewUserDetails('<%= user._id %>')" class="btn" style="padding: 0.25rem 0.5rem;" title="DetaylarÄ± GÃ¶r">
                                                ğŸ‘ï¸
                                            </button>
                                            <button onclick="editUser('<%= user._id %>')" class="btn btn-outline" style="padding: 0.25rem 0.5rem;" title="DÃ¼zenle">
                                                âœï¸
                                            </button>
                                            <button onclick="viewUserOrders('<%= user._id %>')" class="btn btn-outline" style="padding: 0.25rem 0.5rem;" title="SipariÅŸleri GÃ¶r">
                                                ğŸ“¦
                                            </button>
                                            <button onclick="deleteUser('<%= user._id %>')" class="btn btn-danger" style="padding: 0.25rem 0.5rem;" title="Sil">
                                                ğŸ—‘ï¸
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" style="text-align: center; padding: 3rem; color: #ccc;">
                                        <div style="font-size: 3rem; margin-bottom: 1rem;">ğŸ‘¥</div>
                                        <h3 style="color: var(--white); margin-bottom: 0.5rem;">HenÃ¼z kullanÄ±cÄ± bulunmuyor</h3>
                                        <p>KullanÄ±cÄ±lar burada listelenecek</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Sayfalama -->
            <% if (users.length > 0) { %>
            <div style="display: flex; justify-content: between; align-items: center; margin-top: 2rem;">
                <div style="color: #ccc;">
                    Toplam <strong><%= users.length %></strong> kullanÄ±cÄ±
                </div>
                
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <button class="btn btn-outline">â† Ã–nceki</button>
                    <span style="color: #ccc; padding: 0.5rem 1rem;">Sayfa 1</span>
                    <button class="btn btn-outline">Sonraki â†’</button>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/main.js"></script>
    <% if (user && user.role === 'admin') { %>
        <script src="/js/admin.js"></script>
    <% } else if (user) { %>
        <script src="/js/user.js"></script>
    <% } %>

    <!-- KullanÄ±cÄ± Detay Modal -->
    <div id="userDetailModal" class="modal" style="display: none;">
        <div class="card" style="max-width: 600px; width: 90%; max-height: 90vh; overflow-y: auto;">
            <div style="display: flex; justify-content: between; align-items: center; margin-bottom: 1.5rem;">
                <h3 style="color: var(--white); margin: 0;">KullanÄ±cÄ± DetaylarÄ±</h3>
                <button onclick="closeUserModal()" style="background: none; border: none; color: #ccc; font-size: 1.5rem; cursor: pointer;">Ã—</button>
            </div>
            
            <div id="userDetailContent">
                <!-- KullanÄ±cÄ± detaylarÄ± buraya yÃ¼klenecek -->
            </div>
        </div>
    </div>

    <script>
    // KullanÄ±cÄ± arama
    document.getElementById('userSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#usersTable tbody tr');
        
        rows.forEach(row => {
            const userName = row.cells[1].textContent.toLowerCase();
            const userEmail = row.cells[2].textContent.toLowerCase();
            
            if (userName.includes(searchTerm) || userEmail.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // KullanÄ±cÄ± filtreleme
    document.getElementById('userFilter').addEventListener('change', function(e) {
        // Filtreleme iÅŸlemi burada yapÄ±lacak
        console.log('Filtre:', e.target.value);
    });

    // Toplu seÃ§im
    document.getElementById('selectAllUsers').addEventListener('change', function(e) {
        const checkboxes = document.querySelectorAll('.user-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.checked = e.target.checked;
        });
        toggleBulkActions();
    });

    // Bireysel checkbox deÄŸiÅŸiklikleri
    document.querySelectorAll('.user-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', toggleBulkActions);
    });

    function toggleBulkActions() {
        const selectedCount = document.querySelectorAll('.user-checkbox:checked:not(#selectAllUsers)').length;
        const bulkActions = document.getElementById('userBulkActions');
        
        if (selectedCount > 0) {
            bulkActions.style.display = 'block';
            document.getElementById('selectedUsersCount').textContent = selectedCount;
        } else {
            bulkActions.style.display = 'none';
        }
    }

    // KullanÄ±cÄ± detaylarÄ±nÄ± gÃ¶rÃ¼ntÃ¼le
    async function viewUserDetails(userId) {
        try {
            const response = await fetch(`/admin/users/${userId}/details`);
            const user = await response.json();
            
            document.getElementById('userDetailContent').innerHTML = `
                <div style="display: grid; gap: 1.5rem;">
                    <div style="display: flex; gap: 2rem; align-items: start;">
                        <div style="width: 80px; height: 80px; background: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2rem; color: white;">
                            ${user.name.charAt(0).toUpperCase()}
                        </div>
                        <div style="flex: 1;">
                            <h4 style="color: var(--white); margin-bottom: 0.5rem;">${user.name}</h4>
                            <p style="color: #ccc; margin-bottom: 0.5rem;">ğŸ“§ ${user.email}</p>
                            ${user.phone ? `<p style="color: #ccc; margin-bottom: 0.5rem;">ğŸ“ ${user.phone}</p>` : ''}
                            ${user.company ? `<p style="color: #ccc;">ğŸ¢ ${user.company}</p>` : ''}
                        </div>
                    </div>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <div style="background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                            <div style="color: #ccc; font-size: 0.875rem;">KayÄ±t Tarihi</div>
                            <div style="color: var(--white); font-weight: 500;">${new Date(user.createdAt).toLocaleDateString('tr-TR')}</div>
                        </div>
                        <div style="background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                            <div style="color: #ccc; font-size: 0.875rem;">Son GiriÅŸ</div>
                            <div style="color: var(--white); font-weight: 500;">${new Date(user.updatedAt).toLocaleDateString('tr-TR')}</div>
                        </div>
                    </div>
                    
                    <div>
                        <h5 style="color: var(--white); margin-bottom: 1rem;">Ä°statistikler</h5>
                        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem;">
                            <div style="text-align: center; background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                                <div style="color: var(--accent); font-size: 1.5rem; font-weight: bold;">${user.orderCount || 0}</div>
                                <div style="color: #ccc; font-size: 0.875rem;">Toplam SipariÅŸ</div>
                            </div>
                            <div style="text-align: center; background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                                <div style="color: var(--success); font-size: 1.5rem; font-weight: bold;">${user.completedOrders || 0}</div>
                                <div style="color: #ccc; font-size: 0.875rem;">Tamamlanan</div>
                            </div>
                            <div style="text-align: center; background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                                <div style="color: var(--warning); font-size: 1.5rem; font-weight: bold;">${user.pendingOrders || 0}</div>
                                <div style="color: #ccc; font-size: 0.875rem;">Bekleyen</div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('userDetailModal').style.display = 'flex';
        } catch (error) {
            console.error('KullanÄ±cÄ± detay yÃ¼kleme hatasÄ±:', error);
            showNotification('KullanÄ±cÄ± detaylarÄ± yÃ¼klenirken bir hata oluÅŸtu!', 'error');
        }
    }

    function closeUserModal() {
        document.getElementById('userDetailModal').style.display = 'none';
    }

    // KullanÄ±cÄ± dÃ¼zenle
    function editUser(userId) {
        showNotification('KullanÄ±cÄ± dÃ¼zenleme Ã¶zelliÄŸi yakÄ±nda eklenecek!', 'info');
    }

    // KullanÄ±cÄ± sipariÅŸlerini gÃ¶rÃ¼ntÃ¼le
    function viewUserOrders(userId) {
        window.location.href = `/admin/orders?user=${userId}`;
    }

    // KullanÄ±cÄ± silme
    async function deleteUser(userId) {
        if (confirm('Bu kullanÄ±cÄ±yÄ± silmek istediÄŸinizden emin misiniz? Bu iÅŸlem geri alÄ±namaz ve kullanÄ±cÄ±nÄ±n tÃ¼m sipariÅŸleri de silinecektir.')) {
            try {
                const response = await fetch(`/admin/users/${userId}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    showNotification('KullanÄ±cÄ± baÅŸarÄ±yla silindi!', 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    const data = await response.json();
                    showNotification(data.error || 'KullanÄ±cÄ± silinirken bir hata oluÅŸtu!', 'error');
                }
            } catch (error) {
                console.error('KullanÄ±cÄ± silme hatasÄ±:', error);
                showNotification('KullanÄ±cÄ± silinirken bir hata oluÅŸtu!', 'error');
            }
        }
    }

    // SeÃ§ilen kullanÄ±cÄ±larÄ± dÄ±ÅŸa aktar
    function exportSelectedUsers() {
        const selectedUsers = Array.from(document.querySelectorAll('.user-checkbox:checked:not(#selectAllUsers)'))
            .map(checkbox => checkbox.value);
        
        if (selectedUsers.length === 0) {
            showNotification('LÃ¼tfen dÄ±ÅŸa aktarmak iÃ§in kullanÄ±cÄ± seÃ§in!', 'warning');
            return;
        }
        
        showNotification(`${selectedUsers.length} kullanÄ±cÄ± dÄ±ÅŸa aktarÄ±lÄ±yor...`, 'info');
        // DÄ±ÅŸa aktarma iÅŸlemi burada yapÄ±lacak
    }

    // SeÃ§ilen kullanÄ±cÄ±larÄ± sil
    async function deleteSelectedUsers() {
        const selectedUsers = Array.from(document.querySelectorAll('.user-checkbox:checked:not(#selectAllUsers)'))
            .map(checkbox => checkbox.value);
        
        if (selectedUsers.length === 0) {
            showNotification('LÃ¼tfen silmek iÃ§in kullanÄ±cÄ± seÃ§in!', 'warning');
            return;
        }
        
        if (confirm(`${selectedUsers.length} kullanÄ±cÄ±yÄ± silmek istediÄŸinizden emin misiniz? Bu iÅŸlem geri alÄ±namaz!`)) {
            try {
                const response = await fetch('/admin/users/bulk-delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ userIds: selectedUsers })
                });
                
                if (response.ok) {
                    showNotification(`${selectedUsers.length} kullanÄ±cÄ± baÅŸarÄ±yla silindi!`, 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                }
            } catch (error) {
                console.error('Toplu kullanÄ±cÄ± silme hatasÄ±:', error);
                showNotification('KullanÄ±cÄ±lar silinirken bir hata oluÅŸtu!', 'error');
            }
        }
    }

    // Modal dÄ±ÅŸÄ±na tÄ±klayÄ±nca kapatma
    document.getElementById('userDetailModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeUserModal();
        }
    });
    </script>

    <style>
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.8);
        z-index: 1000;
        display: none;
        align-items: center;
        justify-content: center;
    }

    .user-checkbox {
        transform: scale(1.2);
    }
    </style>
</body>
</html>