<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanƒ±cƒ± Y√∂netimi - WebCreate</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/animations.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <!-- Header -->
    <% if (user) { %>
        <% if (user.role === 'admin') { %>
            <%- include('../partials/admin-header') %>
        <% } else { %>
            <%- include('../partials/user-header') %>
        <% } %>
    <% } else { %>
        <%- include('../partials/header') %>
    <% } %>

    <main class="container" style="min-height: 80vh; padding: 2rem 0;">
        <div class="animate-fade-in">
            <!-- Ba≈ülƒ±k ve Arama -->
            <div style="display: flex; justify-content: between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
                <div>
                    <h1 style="color: var(--white); margin-bottom: 0.5rem;">Kullanƒ±cƒ± Y√∂netimi</h1>
                    <p style="color: #ccc;">Sistemde kayƒ±tlƒ± t√ºm kullanƒ±cƒ±lar</p>
                </div>
                
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <div style="position: relative;">
                        <input 
                            type="text" 
                            id="userSearch" 
                            placeholder="Kullanƒ±cƒ± ara..."
                            class="form-control" 
                            style="padding-left: 2.5rem; width: 300px;"
                        >
                        <span style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: #ccc;">üîç</span>
                    </div>
                    
                    <select id="userFilter" class="form-control" style="width: 200px;">
                        <option value="all">T√ºm Kullanƒ±cƒ±lar</option>
                        <option value="recent">Son 7 G√ºn</option>
                        <option value="active">Aktif Kullanƒ±cƒ±lar</option>
                        <option value="inactive">Pasif Kullanƒ±cƒ±lar</option>
                    </select>
                </div>
            </div>

            <!-- Toplu ƒ∞≈ülemler -->
            <div id="userBulkActions" class="card" style="display: none; margin-bottom: 1.5rem; background: var(--medium-gray);">
                <div style="display: flex; justify-content: between; align-items: center;">
                    <div>
                        <strong style="color: var(--white);">
                            <span id="selectedUsersCount">0</span> kullanƒ±cƒ± se√ßildi
                        </strong>
                    </div>
                    <div style="display: flex; gap: 1rem;">
                        <button onclick="exportSelectedUsers()" class="btn btn-outline" style="padding: 0.5rem 1rem;">
                            üìä Se√ßilenleri Dƒ±≈üa Aktar
                        </button>
                        <button onclick="deleteSelectedUsers()" class="btn btn-danger" style="padding: 0.5rem 1rem;">
                            üóëÔ∏è Se√ßilenleri Sil
                        </button>
                    </div>
                </div>
            </div>

            <!-- Kullanƒ±cƒ± Tablosu -->
            <div class="card">
                <div class="table">
                    <table style="width: 100%;" id="usersTable">
                        <thead>
                            <tr>
                                <th style="width: 30px;">
                                    <input type="checkbox" id="selectAllUsers" class="user-checkbox">
                                </th>
                                <th>Kullanƒ±cƒ± Bilgisi</th>
                                <th>ƒ∞leti≈üim</th>
                                <th>≈ûirket</th>
                                <th>Kayƒ±t Tarihi</th>
                                <th>Son Aktivite</th>
                                <th>Durum</th>
                                <th>ƒ∞≈ülemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users.length > 0) { %>
                                <% users.forEach(user => { %>
                                <tr>
                                    <td>
                                        <input type="checkbox" class="user-checkbox" value="<%= user._id %>">
                                    </td>
                                    <td>
                                        <div>
                                            <div style="color: var(--white); font-weight: 500;"><%= user.name %></div>
                                            <div style="color: #ccc; font-size: 0.875rem;">ID: <%= user._id.toString().substring(0, 8) %>...</div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div style="color: var(--white);">üìß <%= user.email %></div>
                                            <% if (user.phone) { %>
                                            <div style="color: #ccc; font-size: 0.875rem;">üìû <%= user.phone %></div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (user.company) { %>
                                            <span style="color: var(--white);"><%= user.company %></span>
                                        <% } else { %>
                                            <span style="color: #ccc;">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span style="color: #ccc;">
                                            <%= new Date(user.createdAt).toLocaleDateString('tr-TR') %>
                                        </span>
                                    </td>
                                    <td>
                                        <span style="color: #ccc;">
                                            <%= new Date(user.updatedAt).toLocaleDateString('tr-TR') %>
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge status-active">
                                            üü¢ Aktif
                                        </span>
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                            <button onclick="viewUserDetails('<%= user._id %>')" class="btn" style="padding: 0.25rem 0.5rem;" title="Detaylarƒ± G√∂r">
                                                üëÅÔ∏è
                                            </button>
                                            <button onclick="editUser('<%= user._id %>')" class="btn btn-outline" style="padding: 0.25rem 0.5rem;" title="D√ºzenle">
                                                ‚úèÔ∏è
                                            </button>
                                            <button onclick="viewUserOrders('<%= user._id %>')" class="btn btn-outline" style="padding: 0.25rem 0.5rem;" title="Sipari≈üleri G√∂r">
                                                üì¶
                                            </button>
                                            <button onclick="deleteUser('<%= user._id %>')" class="btn btn-danger" style="padding: 0.25rem 0.5rem;" title="Sil">
                                                üóëÔ∏è
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" style="text-align: center; padding: 3rem; color: #ccc;">
                                        <div style="font-size: 3rem; margin-bottom: 1rem;">üë•</div>
                                        <h3 style="color: var(--white); margin-bottom: 0.5rem;">Hen√ºz kullanƒ±cƒ± bulunmuyor</h3>
                                        <p>Kullanƒ±cƒ±lar burada listelenecek</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Sayfalama -->
            <% if (users.length > 0) { %>
            <div style="display: flex; justify-content: between; align-items: center; margin-top: 2rem;">
                <div style="color: #ccc;">
                    Toplam <strong><%= users.length %></strong> kullanƒ±cƒ±
                </div>
                
                <div style="display: flex; gap: 1rem; align-items: center;">
                    <button class="btn btn-outline">‚Üê √ñnceki</button>
                    <span style="color: #ccc; padding: 0.5rem 1rem;">Sayfa 1</span>
                    <button class="btn btn-outline">Sonraki ‚Üí</button>
                </div>
            </div>
            <% } %>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/main.js"></script>
    <% if (user && user.role === 'admin') { %>
        <script src="/js/admin.js"></script>
    <% } else if (user) { %>
        <script src="/js/user.js"></script>
    <% } %>

    <!-- Kullanƒ±cƒ± Detay Modal -->
    <div id="userDetailModal" class="modal" style="display: none;">
        <div class="card" style="max-width: 600px; width: 90%; max-height: 90vh; overflow-y: auto;">
            <div style="display: flex; justify-content: between; align-items: center; margin-bottom: 1.5rem;">
                <h3 style="color: var(--white); margin: 0;">Kullanƒ±cƒ± Detaylarƒ±</h3>
                <button onclick="closeUserModal()" style="background: none; border: none; color: #ccc; font-size: 1.5rem; cursor: pointer;">√ó</button>
            </div>
            
            <div id="userDetailContent">
                <!-- Kullanƒ±cƒ± detaylarƒ± buraya y√ºklenecek -->
            </div>
        </div>
    </div>

    <script>
    // Kullanƒ±cƒ± arama
    document.getElementById('userSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('#usersTable tbody tr');
        
        rows.forEach(row => {
            const userName = row.cells[1].textContent.toLowerCase();
            const userEmail = row.cells[2].textContent.toLowerCase();
            
            if (userName.includes(searchTerm) || userEmail.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });

    // Kullanƒ±cƒ± filtreleme
    document.getElementById('userFilter').addEventListener('change', function(e) {
        // Filtreleme i≈ülemi burada yapƒ±lacak
        console.log('Filtre:', e.target.value);
    });

    // Toplu se√ßim
    document.getElementById('selectAllUsers').addEventListener('change', function(e) {
        const checkboxes = document.querySelectorAll('.user-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.checked = e.target.checked;
        });
        toggleBulkActions();
    });

    // Bireysel checkbox deƒüi≈üiklikleri
    document.querySelectorAll('.user-checkbox').forEach(checkbox => {
        checkbox.addEventListener('change', toggleBulkActions);
    });

    function toggleBulkActions() {
        const selectedCount = document.querySelectorAll('.user-checkbox:checked:not(#selectAllUsers)').length;
        const bulkActions = document.getElementById('userBulkActions');
        
        if (selectedCount > 0) {
            bulkActions.style.display = 'block';
            document.getElementById('selectedUsersCount').textContent = selectedCount;
        } else {
            bulkActions.style.display = 'none';
        }
    }

    // Kullanƒ±cƒ± detaylarƒ±nƒ± g√∂r√ºnt√ºle
    async function viewUserDetails(userId) {
        try {
            const response = await fetch(`/admin/users/${userId}/details`);
            const user = await response.json();
            
            document.getElementById('userDetailContent').innerHTML = `
                <div style="display: grid; gap: 1.5rem;">
                    <div style="display: flex; gap: 2rem; align-items: start;">
                        <div style="width: 80px; height: 80px; background: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2rem; color: white;">
                            ${user.name.charAt(0).toUpperCase()}
                        </div>
                        <div style="flex: 1;">
                            <h4 style="color: var(--white); margin-bottom: 0.5rem;">${user.name}</h4>
                            <p style="color: #ccc; margin-bottom: 0.5rem;">üìß ${user.email}</p>
                            ${user.phone ? `<p style="color: #ccc; margin-bottom: 0.5rem;">üìû ${user.phone}</p>` : ''}
                            ${user.company ? `<p style="color: #ccc;">üè¢ ${user.company}</p>` : ''}
                        </div>
                    </div>
                    
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <div style="background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                            <div style="color: #ccc; font-size: 0.875rem;">Kayƒ±t Tarihi</div>
                            <div style="color: var(--white); font-weight: 500;">${new Date(user.createdAt).toLocaleDateString('tr-TR')}</div>
                        </div>
                        <div style="background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                            <div style="color: #ccc; font-size: 0.875rem;">Son Giri≈ü</div>
                            <div style="color: var(--white); font-weight: 500;">${new Date(user.updatedAt).toLocaleDateString('tr-TR')}</div>
                        </div>
                    </div>
                    
                    <div>
                        <h5 style="color: var(--white); margin-bottom: 1rem;">ƒ∞statistikler</h5>
                        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem;">
                            <div style="text-align: center; background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                                <div style="color: var(--accent); font-size: 1.5rem; font-weight: bold;">${user.orderCount || 0}</div>
                                <div style="color: #ccc; font-size: 0.875rem;">Toplam Sipari≈ü</div>
                            </div>
                            <div style="text-align: center; background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                                <div style="color: var(--success); font-size: 1.5rem; font-weight: bold;">${user.completedOrders || 0}</div>
                                <div style="color: #ccc; font-size: 0.875rem;">Tamamlanan</div>
                            </div>
                            <div style="text-align: center; background: var(--dark-gray); padding: 1rem; border-radius: 5px;">
                                <div style="color: var(--warning); font-size: 1.5rem; font-weight: bold;">${user.pendingOrders || 0}</div>
                                <div style="color: #ccc; font-size: 0.875rem;">Bekleyen</div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('userDetailModal').style.display = 'flex';
        } catch (error) {
            console.error('Kullanƒ±cƒ± detay y√ºkleme hatasƒ±:', error);
            showNotification('Kullanƒ±cƒ± detaylarƒ± y√ºklenirken bir hata olu≈ütu!', 'error');
        }
    }

    function closeUserModal() {
        document.getElementById('userDetailModal').style.display = 'none';
    }

    // Kullanƒ±cƒ± d√ºzenle
    function editUser(userId) {
        showNotification('Kullanƒ±cƒ± d√ºzenleme √∂zelliƒüi yakƒ±nda eklenecek!', 'info');
    }

    // Kullanƒ±cƒ± sipari≈ülerini g√∂r√ºnt√ºle
    function viewUserOrders(userId) {
        window.location.href = `/admin/orders?user=${userId}`;
    }

    // Kullanƒ±cƒ± silme
    async function deleteUser(userId) {
        if (confirm('Bu kullanƒ±cƒ±yƒ± silmek istediƒüinizden emin misiniz? Bu i≈ülem geri alƒ±namaz ve kullanƒ±cƒ±nƒ±n t√ºm sipari≈üleri de silinecektir.')) {
            try {
                const response = await fetch(`/admin/users/${userId}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    showNotification('Kullanƒ±cƒ± ba≈üarƒ±yla silindi!', 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    const data = await response.json();
                    showNotification(data.error || 'Kullanƒ±cƒ± silinirken bir hata olu≈ütu!', 'error');
                }
            } catch (error) {
                console.error('Kullanƒ±cƒ± silme hatasƒ±:', error);
                showNotification('Kullanƒ±cƒ± silinirken bir hata olu≈ütu!', 'error');
            }
        }
    }

    // Se√ßilen kullanƒ±cƒ±larƒ± dƒ±≈üa aktar
    function exportSelectedUsers() {
        const selectedUsers = Array.from(document.querySelectorAll('.user-checkbox:checked:not(#selectAllUsers)'))
            .map(checkbox => checkbox.value);
        
        if (selectedUsers.length === 0) {
            showNotification('L√ºtfen dƒ±≈üa aktarmak i√ßin kullanƒ±cƒ± se√ßin!', 'warning');
            return;
        }
        
        showNotification(`${selectedUsers.length} kullanƒ±cƒ± dƒ±≈üa aktarƒ±lƒ±yor...`, 'info');
        // Dƒ±≈üa aktarma i≈ülemi burada yapƒ±lacak
    }

    // Se√ßilen kullanƒ±cƒ±larƒ± sil
    async function deleteSelectedUsers() {
        const selectedUsers = Array.from(document.querySelectorAll('.user-checkbox:checked:not(#selectAllUsers)'))
            .map(checkbox => checkbox.value);
        
        if (selectedUsers.length === 0) {
            showNotification('L√ºtfen silmek i√ßin kullanƒ±cƒ± se√ßin!', 'warning');
            return;
        }
        
        if (confirm(`${selectedUsers.length} kullanƒ±cƒ±yƒ± silmek istediƒüinizden emin misiniz? Bu i≈ülem geri alƒ±namaz!`)) {
            try {
                const response = await fetch('/admin/users/bulk-delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ userIds: selectedUsers })
                });
                
                if (response.ok) {
                    showNotification(`${selectedUsers.length} kullanƒ±cƒ± ba≈üarƒ±yla silindi!`, 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                }
            } catch (error) {
                console.error('Toplu kullanƒ±cƒ± silme hatasƒ±:', error);
                showNotification('Kullanƒ±cƒ±lar silinirken bir hata olu≈ütu!', 'error');
            }
        }
    }

    // Modal dƒ±≈üƒ±na tƒ±klayƒ±nca kapatma
    document.getElementById('userDetailModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeUserModal();
        }
    });
    </script>

    <style>
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.8);
        z-index: 1000;
        display: none;
        align-items: center;
        justify-content: center;
    }

    .user-checkbox {
        transform: scale(1.2);
    }
    </style>
</body>
</html>