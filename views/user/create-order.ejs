<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Sipariş - WebCreate</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/animations.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <% if (user) { %>
        <% if (user.role === 'admin') { %>
            <%- include('../partials/admin-header') %>
        <% } else { %>
            <%- include('../partials/user-header') %>
        <% } %>
    <% } else { %>
        <%- include('../partials/header') %>
    <% } %>

    <main class="container" style="min-height: 80vh; padding: 2rem 0;">
        <div class="animate-fade-in">
            <div style="text-align: center; margin-bottom: 2rem;">
                <h1 style="color: var(--white); margin-bottom: 0.5rem;">Yeni Web Sitesi Siparişi</h1>
                <p style="color: #ccc;">Hayalinizdeki web sitesini oluşturmak için ilk adımı atın</p>
            </div>

            <form action="/orders/create" method="POST" enctype="multipart/form-data" data-validate>
                <div class="row" style="align-items: flex-start; gap: 2rem;">
                    
                    <div class="col" style="flex: 2;">
                        <div class="card">
                            <h3 style="color: var(--white); margin-bottom: 1.5rem;">📋 Sipariş Bilgileri</h3>
                            <div class="form-group">
                                <label for="title" class="form-label">Sipariş Başlığı</label>
                                <input type="text" id="title" name="title" class="form-control" required placeholder="Örn: E-ticaret Sitesi, Blog Sitesi vb.">
                            </div>
                            <div class="form-group">
                                <label for="description" class="form-label">Detaylı Açıklama</label>
                                <textarea id="description" name="description" class="form-control" required placeholder="İstediğiniz özellikleri, sayfaları, renkleri ve diğer detayları yazın..." rows="8"></textarea>
                            </div>
                        </div>

                        <div class="card">
                            <h3 style="color: var(--white); margin-bottom: 1.5rem;">🎨 Tasarım Seçenekleri</h3>
                            <div class="form-group">
                                <label for="layout" class="form-label">Sayfa Düzeni</label>
                                <select id="layout" name="layout" class="form-control">
                                    <option value="modern">Modern ve Minimalist</option>
                                    <option value="corporate">Kurumsal ve Ciddi</option>
                                    <option value="creative">Yaratıcı ve Sanatsal</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="colorPalette" class="form-label">Renk Paleti</label>
                                <select id="colorPalette" name="colorPalette" class="form-control">
                                    <option value="blue">Mavi Tonları (Güvenilir)</option>
                                    <option value="dark">Koyu Tema (Modern)</option>
                                    <option value="light">Açık Tema (Klasik)</option>
                                    <option value="green">Yeşil Tonları (Doğal)</option>
                                </select>
                            </div>
                        </div>

                        <div class="card">
                            <h3 style="color: var(--white); margin-bottom: 1.5rem;">📎 Dosya Yükleme</h3>
                            <div class="file-upload" onclick="document.getElementById('files').click()">
                                <div style="font-size: 3rem; margin-bottom: 1rem;">📁</div>
                                <h4 style="color: var(--white);">Dosyaları Buraya Sürükleyin veya Tıklayın</h4>
                                <input type="file" id="files" name="files" multiple style="display: none;">
                            </div>
                            <div id="filePreview" style="margin-top: 1rem;"></div>
                        </div>
                    </div>

                    <div class="col" style="flex: 1; position: sticky; top: 2rem;">
                        <div class="card">
                            <h3 style="color: var(--white); margin-bottom: 1.5rem;">👁️ Canlı Önizleme</h3>
                            <div id="live-preview" style="background: #fff; border-radius: 8px; padding: 10px; min-height: 400px; transition: all 0.3s ease;">
                                <div id="preview-header" style="padding: 10px; border-bottom: 1px solid #eee; text-align: center;">
                                    <h4 id="preview-title" style="color: #333; font-size: 1.2em;">Başlık</h4>
                                </div>
                                <div id="preview-content" style="padding: 20px;">
                                    <p id="preview-description" style="color: #555; font-size: 0.9em; line-height: 1.6;">Açıklama...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <a href="/user/orders" class="btn btn-outline" style="flex: 1;">← İptal Et</a>
                    <button type="submit" class="btn hover-lift" style="flex: 2;">🚀 Siparişi Oluştur ve Gönder</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
    <script src="/js/main.js"></script>
    <script>
        // Form elemanlarını seç
        const titleInput = document.getElementById('title');
        const descriptionInput = document.getElementById('description');
        const layoutSelect = document.getElementById('layout');
        const colorSelect = document.getElementById('colorPalette');

        // Önizleme elemanlarını seç
        const previewTitle = document.getElementById('preview-title');
        const previewDescription = document.getElementById('preview-description');
        const livePreview = document.getElementById('live-preview');
        const previewHeader = document.getElementById('preview-header');

        // Renk paletleri
        const colorPalettes = {
            blue: { bg: '#F0F8FF', header: '#E6F2FF', title: '#005A9C', text: '#333' },
            dark: { bg: '#2c3e50', header: '#34495e', title: '#ecf0f1', text: '#bdc3c7' },
            light: { bg: '#ffffff', header: '#f8f9fa', title: '#212529', text: '#495057' },
            green: { bg: '#F0FFF0', header: '#E6F8E6', title: '#2E8B57', text: '#333' }
        };

        // Güncelleme fonksiyonu
        function updatePreview() {
            // Başlık ve Açıklama
            previewTitle.textContent = titleInput.value || 'Başlık';
            previewDescription.textContent = descriptionInput.value || 'Açıklama...';
            
            // Renkler
            const selectedPalette = colorPalettes[colorSelect.value];
            livePreview.style.background = selectedPalette.bg;
            previewHeader.style.background = selectedPalette.header;
            previewTitle.style.color = selectedPalette.title;
            previewDescription.style.color = selectedPalette.text;

            // Düzen
            if (layoutSelect.value === 'corporate') {
                livePreview.style.fontFamily = 'Georgia, serif';
                previewTitle.style.textAlign = 'left';
            } else if (layoutSelect.value === 'creative') {
                livePreview.style.fontFamily = 'cursive';
                previewTitle.style.fontStyle = 'italic';
            } else { // Modern
                livePreview.style.fontFamily = 'Inter, sans-serif';
                previewTitle.style.textAlign = 'center';
                previewTitle.style.fontStyle = 'normal';
            }
        }

        // Event listener'ları ekle
        titleInput.addEventListener('input', updatePreview);
        descriptionInput.addEventListener('input', updatePreview);
        layoutSelect.addEventListener('change', updatePreview);
        colorSelect.addEventListener('change', updatePreview);

        // İlk yüklemede çalıştır
        updatePreview();
    </script>
</body>
</html>