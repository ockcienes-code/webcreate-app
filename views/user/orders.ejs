<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sipari≈ülerim - WebCreate</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/animations.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <!-- Header -->
    <% if (user) { %>
        <% if (user.role === 'admin') { %>
            <%- include('../partials/admin-header') %>
        <% } else { %>
            <%- include('../partials/user-header') %>
        <% } %>
    <% } else { %>
        <%- include('../partials/header') %>
    <% } %>

    <main class="container" style="min-height: 80vh; padding: 2rem 0;">
        <div class="animate-fade-in">
            <div style="display: flex; justify-content: between; align-items: center; margin-bottom: 2rem;">
                <div>
                    <h1 style="color: var(--white); margin-bottom: 0.5rem;">Sipari≈ülerim</h1>
                    <p style="color: #ccc;">T√ºm web site sipari≈ülerinizin listesi</p>
                </div>
                
                <a href="/orders/create" class="btn hover-lift">
                    ‚ûï Yeni Sipari≈ü
                </a>
            </div>

            <% if (orders.length > 0) { %>
                <div class="card">
                    <div class="table">
                        <table style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Ba≈ülƒ±k</th>
                                    <th>A√ßƒ±klama</th>
                                    <th>Durum</th>
                                    <th>Fiyat</th>
                                    <th>Olu≈üturulma</th>
                                    <th>ƒ∞≈ülemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                <tr>
                                    <td style="font-weight: 500;"><%= order.title %></td>
                                    <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        <%= order.description.substring(0, 50) %>...
                                    </td>
                                    <td>
                                        <span class="status-badge status-<%= order.status %>">
                                            <%
                                                const statusText = {
                                                    'pending': 'Beklemede',
                                                    'in_progress': '√úretimde',
                                                    'delivered': 'Teslim Edildi',
                                                    'revision': 'Revizyonda',
                                                    'cancelled': 'ƒ∞ptal Edildi'
                                                };
                                            %>
                                            <%= statusText[order.status] %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (order.price > 0) { %>
                                            <%= order.price %> TL
                                        <% } else { %>
                                            <span style="color: #ccc;">Belirlenmedi</span>
                                        <% } %>
                                    </td>
                                    <td><%= new Date(order.createdAt).toLocaleDateString('tr-TR') %></td>
                                    <td>
                                        <div style="display: flex; gap: 0.5rem;">
                                            <a href="/orders/<%= order._id %>" class="btn" style="padding: 0.25rem 0.5rem; font-size: 0.875rem;">
                                                üëÅÔ∏è Detay
                                            </a>
                                            
                                            <% if (order.status === 'delivered') { %>
                                                <button 
                                                    onclick="openRevisionModal('<%= order._id %>', '<%= order.title %>')"
                                                    class="btn btn-outline" 
                                                    style="padding: 0.25rem 0.5rem; font-size: 0.875rem;"
                                                >
                                                    üîÑ Revizyon
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } else { %>
                <div class="card">
                    <div style="text-align: center; padding: 4rem 2rem; color: #ccc;">
                        <div style="font-size: 4rem; margin-bottom: 1rem;">üìù</div>
                        <h3 style="color: var(--white); margin-bottom: 1rem;">Hen√ºz sipari≈üiniz bulunmuyor</h3>
                        <p style="margin-bottom: 2rem;">ƒ∞lk web site sipari≈üinizi olu≈üturarak ba≈ülayƒ±n!</p>
                        <a href="/orders/create" class="btn hover-lift" style="font-size: 1.1rem;">
                            üöÄ ƒ∞lk Sipari≈üimi Olu≈ütur
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/main.js"></script>
    <% if (user && user.role === 'admin') { %>
        <script src="/js/admin.js"></script>
    <% } else if (user) { %>
        <script src="/js/user.js"></script>
    <% } %>

    <!-- Revizyon Modal -->
    <div id="revisionModal" class="modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 1000; align-items: center; justify-content: center;">
        <div class="card" style="max-width: 500px; width: 90%; max-height: 90vh; overflow-y: auto;">
            <h3 style="color: var(--white); margin-bottom: 1rem;">Revizyon ƒ∞steƒüi</h3>
            
            <form id="revisionForm">
                <input type="hidden" id="revisionOrderId" name="orderId">
                
                <div class="form-group">
                    <label class="form-label">Sipari≈ü</label>
                    <div id="revisionOrderTitle" style="padding: 0.75rem; background: var(--medium-gray); border-radius: 5px; color: var(--white);">
                        <!-- Sipari≈ü ba≈ülƒ±ƒüƒ± buraya gelecek -->
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="revisionDescription" class="form-label">Revizyon A√ßƒ±klamasƒ±</label>
                    <textarea 
                        id="revisionDescription" 
                        name="revisionDescription" 
                        class="form-control" 
                        required 
                        placeholder="Yapƒ±lmasƒ±nƒ± istediƒüiniz deƒüi≈üiklikleri detaylƒ± bir ≈üekilde a√ßƒ±klayƒ±n..."
                        rows="5"
                    ></textarea>
                </div>
                
                <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
                    <button type="button" onclick="closeRevisionModal()" class="btn btn-outline" style="flex: 1;">
                        ƒ∞ptal
                    </button>
                    <button type="submit" class="btn" style="flex: 1;">
                        üì® ƒ∞steƒüi G√∂nder
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
    function openRevisionModal(orderId, orderTitle) {
        document.getElementById('revisionOrderId').value = orderId;
        document.getElementById('revisionOrderTitle').textContent = orderTitle;
        document.getElementById('revisionModal').style.display = 'flex';
    }

    function closeRevisionModal() {
        document.getElementById('revisionModal').style.display = 'none';
        document.getElementById('revisionForm').reset();
    }

    // Revizyon formu g√∂nderme
    document.getElementById('revisionForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const orderId = document.getElementById('revisionOrderId').value;
        const description = document.getElementById('revisionDescription').value;
        
        try {
            const response = await fetch(`/orders/${orderId}/revision`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    revisionDescription: description
                })
            });
            
            const data = await response.json();
            
            if (data.success) {
                showNotification('Revizyon isteƒüiniz ba≈üarƒ±yla g√∂nderildi!', 'success');
                closeRevisionModal();
                // Sayfayƒ± yenile
                setTimeout(() => {
                    window.location.reload();
                }, 2000);
            } else {
                showNotification(data.error || 'Bir hata olu≈ütu!', 'error');
            }
        } catch (error) {
            console.error('Revizyon isteƒüi hatasƒ±:', error);
            showNotification('ƒ∞stek g√∂nderilirken bir hata olu≈ütu!', 'error');
        }
    });

    // Modal dƒ±≈üƒ±na tƒ±klayƒ±nca kapatma
    document.getElementById('revisionModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeRevisionModal();
        }
    });
    </script>
</body>
</html>